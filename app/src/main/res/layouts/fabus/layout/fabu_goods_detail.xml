<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choose_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_fabu_goods_detail_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@android:color/background_light"
            android:text="返回" />

        <TextView
            android:id="@+id/tv_fabu_goods_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_horizontal"
            android:text="top"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whitesmoke"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/background_light"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/whitesmoke"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:text="填写信息"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <GridView
                            android:id="@+id/myGrid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="6dp"
                            android:horizontalSpacing="12dp"
                            android:numColumns="4"
                            android:verticalSpacing="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:padding="10dp"
                            android:text="标       题"
                            android:textColor="@android:color/holo_green_light"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/et_fabu_goods_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:layout_weight="8"
                            android:hint="物品品牌描述等"
                            android:padding="10dp"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:padding="10dp"
                            android:text="物品名称"
                            android:textColor="@android:color/holo_green_light"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/et_fabu_goods_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:layout_weight="8"
                            android:hint="物品名称"
                            android:padding="10dp"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:padding="10dp"
                            android:text="价       格"
                            android:textColor="@android:color/holo_green_light"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/et_fabu_goods_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:layout_weight="7"
                            android:hint="大于0的数字"
                            android:padding="10dp"
                            android:inputType="number"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:paddingTop="10dp"
                            android:text="元"
                            android:textColor="@android:color/background_dark"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:padding="10dp"
                            android:text="新旧程度"
                            android:textColor="@android:color/holo_green_light"
                            android:textSize="17sp" />

                        <Spinner
                            android:id="@+id/sp_fabu_goods_degree"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:layout_weight="8"
                            android:entries="@array/fabu_goods_degree"
                            android:padding="10dp"
                            android:prompt="@string/goods_degree"
                            android:spinnerMode="dialog"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:padding="10dp"
                            android:text="描       述"
                            android:textColor="@android:color/holo_green_light"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/et_fabu_goods_detail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:layout_weight="8"
                            android:hint="物品的状况、特色等描述"
                            android:padding="10dp"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:padding="10dp"
                            android:text="区       域"
                            android:textColor="@android:color/holo_green_light"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/et_fabu_goods_area"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:layout_weight="8"
                            android:hint="交易的范围"
                            android:onClick="onAddress2Picker"
                            android:padding="10dp"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:padding="10dp"
                            android:text="来       源"
                            android:textColor="@android:color/holo_green_light"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/et_fabu_goods_source"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:layout_weight="8"
                            android:hint="物品来源:个人或者其他"
                            android:padding="10dp"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:padding="10dp"
                            android:text="联  系  人"
                            android:textColor="@android:color/holo_green_light"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/et_fabu_goods_telname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:layout_weight="8"
                            android:hint="联系人称呼"
                            android:padding="10dp"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:padding="10dp"
                            android:text="联系电话"
                            android:textColor="@android:color/holo_green_light"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/et_fabu_goods_tel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:layout_weight="8"
                            android:hint="手机或固定电话"
                            android:padding="10dp"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/background_light"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_fabu_goods_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/holo_green_light"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:text="确认发布"
                    android:textColor="?attr/colorSwitchThumbNormal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whitesmoke"
        android:orientation="horizontal" />

</LinearLayout>