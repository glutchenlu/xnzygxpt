<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_fabu_fuwu_detail_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:background="@android:color/background_light"
                android:text="返回" />

            <TextView
                android:id="@+id/tv_fabu_fuwu_classify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:gravity="center_horizontal"
                android:text="快捷服务发布"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/whitesmoke"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_light"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whitesmoke"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:text="填写信息"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:padding="10dp"
                android:text="信息简述"
                android:textColor="@android:color/holo_green_light"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_fabu_fuwu_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_weight="8"
                android:hint="简述相关内容"
                android:padding="10dp"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fabu_fuwu_station_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:padding="10dp"
                android:text="车       站"
                android:textColor="@android:color/holo_green_light"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_fabu_fuwu_station"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_weight="8"
                android:hint="填写车站或快递领取商"
                android:padding="10dp"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:padding="10dp"
                android:text="领取时间"
                android:textColor="@android:color/holo_green_light"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_fabu_fuwu_receive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_weight="8"
                android:hint="领取时间"
                android:onClick="onMonthDayPicker"
                android:padding="10dp"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:padding="10dp"
                android:text="价        格"
                android:textColor="@android:color/holo_green_light"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_fabu_fuwu_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_weight="8"
                android:hint="填写价格，数字"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:padding="10dp"
                android:text="信誉等级"
                android:textColor="@android:color/holo_green_light"
                android:textSize="17sp" />

            <Spinner
                android:id="@+id/et_fabu_fuwu_degree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_weight="8"
                android:entries="@array/fuwu_area"
                android:padding="10dp"
                android:spinnerMode="dropdown"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:padding="10dp"
                android:text="交易地点"
                android:textColor="@android:color/holo_green_light"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_fabu_fuwu_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_weight="8"
                android:hint="物品交易地点"
                android:onClick="onAddress2Picker"
                android:padding="10dp"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/background_light"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_fabu_fuwu_submit"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@android:color/holo_green_light"
            android:text="确认发布"
            android:textColor="@color/whitesmoke" />
    </LinearLayout>
</LinearLayout>