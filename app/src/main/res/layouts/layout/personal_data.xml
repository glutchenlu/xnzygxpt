<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_jianli_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@android:color/background_light"
            android:text="返回" />

        <Button
            android:id="@+id/btn_person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@android:color/background_light"
            android:text="个人资料"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/whitesmoke"
        android:orientation="horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/background_light"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whitesmoke"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:text="基本资料" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="10dp"
                        android:text="头像"
                        android:textSize="14sp" />

                    <develop.cl.com.crsp.image.CircleImageView
                        android:id="@+id/iv_person_pic"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        android:padding="10dp"
                        android:src="@mipmap/hanmian" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_person_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:onClick="onAddress3Picker"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:text="学校"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_person_school"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="等待完善"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/next"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_person_stuid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:text="学号"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_person_stuid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="等待完善"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/next"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_person_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:text="昵称"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_person_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="等待完善"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/next"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_person_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:text="性别"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_person_sex"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="等待完善"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/next"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_person_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:onClick="onYearMonthDayPicker"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:text="生日"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_person_data"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="等待完善"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/next"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_person_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:padding="10dp"
                        android:text="手机号码"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_person_tel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="等待完善"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/next"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_person_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:padding="10dp"
                        android:text="邮箱地址"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_person_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="等待完善"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/next"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_person_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:text="用户名"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_person_account"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="13500011151"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/next"
                        android:padding="10dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@android:color/background_light"
                android:orientation="vertical"
                android:paddingBottom="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whitesmoke"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:text="交友资料" />

                <LinearLayout
                    android:id="@+id/lv_person_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:onClick="onAddress2Picker"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:text="家乡"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_person_home"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="等待完善"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/next"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_person_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:text="职业"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_person_work"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="等待完善"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/next"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_person_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:onClick="onAddress4Picker"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:padding="10dp"
                        android:text="活动区域"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_person_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="等待完善"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/next"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_person_lstate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:padding="10dp"
                        android:text="情感状态"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_person_lstate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="等待完善"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/next"
                        android:padding="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_person_mark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:text="签名"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_person_mark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="等待完善"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/next"
                        android:padding="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>