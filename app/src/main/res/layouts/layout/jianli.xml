<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_jianli_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@android:color/background_light"
            android:text="返回" />

        <Button
            android:id="@+id/btn_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="8"
            android:background="@android:color/background_light"
            android:text="填写信息" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light">

        <RelativeLayout
            android:id="@+id/rl_jianli_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_jianli_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="姓        名"
                android:textColor="@android:color/holo_green_light" />

            <EditText
                android:id="@+id/et_jianli_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv_jianli_name"
                android:hint="请填写姓名"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_jianli_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_jianli_name"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_jianli_sex"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="性        别"
                android:textColor="@android:color/holo_green_light" />

            <RadioGroup
                android:id="@+id/rg_jianli_sex"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv_jianli_sex"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_jianli_m"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:text="男"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rb_jianli_w"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:text="女"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_jianli_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_jianli_sex"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_jianli_data"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="出生年月"
                android:textColor="@android:color/holo_green_light" />

            <EditText
                android:id="@+id/et_jianli_data"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv_jianli_data"
                android:ems="10"
                android:hint="请选择出生年月"
                android:inputType="date"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_jianli_edu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_jianli_data"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_jianli_edu"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="最高学历"
                android:textColor="@android:color/holo_green_light" />

            <EditText
                android:id="@+id/et_jianli_edu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv_jianli_edu"
                android:ems="10"
                android:hint="请选择学历"
                android:inputType="date"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_jianli_exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_jianli_edu"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_jianli_exp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="工作年限"
                android:textColor="@android:color/holo_green_light" />

            <EditText
                android:id="@+id/et_jianli_exp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv_jianli_exp"
                android:ems="10"
                android:hint="请选择工作年限"
                android:inputType="date"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light">

        <RelativeLayout
            android:id="@+id/rl_jianli_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_jianli_tel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="手机号码"
                android:textColor="@android:color/holo_green_light" />

            <EditText
                android:id="@+id/et_jianli_tel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv_jianli_tel"
                android:hint="请填写正确的手机号码"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_jianli_ver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_jianli_tel"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_jianli_ver"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="手机认证"
                android:textColor="@android:color/holo_green_light" />

            <EditText
                android:id="@+id/et_jianli_ver"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv_jianli_ver"
                android:hint="手机认证为必填项"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn_jianli_ver"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/et_jianli_ver"
                android:background="@android:color/holo_green_light"
                android:text="获取验证码"
                android:textColor="?attr/colorSwitchThumbNormal" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_jianli_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_jianli_ver"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="获取手机认证之后提高关注度"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_jianli_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_jianli_remind"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_jianli_email"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="邮箱地址"
                android:textColor="@android:color/holo_green_light" />

            <EditText
                android:id="@+id/et_jianli_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv_jianli_email"
                android:hint="请填写邮箱地址"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_green_light"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="确认提交"
            android:textColor="?attr/colorSwitchThumbNormal" />
    </LinearLayout>
</LinearLayout>